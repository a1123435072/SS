<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/text_alignment_control_layout_id"
    android:layout_width="match_parent"
    android:layout_height="136dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:visibility="gone"
    android:weightSum="3">

    <LinearLayout
        android:id="@+id/text_alignment_control_left_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/text_alignment_control_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_image_text_alignment_left_selected" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/text_alignment_control_middle_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/text_alignment_control_middle_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_image_text_alignment_middle_normal" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/text_alignment_control_right_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/text_alignment_control_right_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_image_text_alignment_right_normal" />

    </LinearLayout>


</LinearLayout>