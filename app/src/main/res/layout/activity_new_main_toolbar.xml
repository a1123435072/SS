<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roboto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/drawer_indicator"
        android:layout_width="@dimen/actionbar_icon_size"
        android:layout_height="@dimen/actionbar_icon_size"
        android:layout_gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:scaleType="centerInside" />

    <FrameLayout
        android:id="@+id/home_toolbar_nav_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/drawer_indicator">


        <RelativeLayout
            android:id="@+id/group_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/actionbar_icon_padding"
            android:layout_marginRight="@dimen/actionbar_icon_padding"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_logo" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/group_scrolled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/actionbar_icon_margin"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/devotion"
                android:layout_width="@dimen/actionbar_icon_size"
                android:layout_height="@dimen/actionbar_icon_size"
                android:layout_marginLeft="@dimen/actionbar_icon_margin_small"
                android:background="?attr/selectableItemBackground"
                android:scaleType="centerInside"
                android:src="@drawable/actionbar_devotion" />

            <ImageView
                android:id="@+id/prayer"
                android:layout_width="@dimen/actionbar_icon_size"
                android:layout_height="@dimen/actionbar_icon_size"
                android:layout_marginLeft="@dimen/actionbar_icon_margin_small"
                android:background="?attr/selectableItemBackground"
                android:scaleType="centerInside"
                android:src="@drawable/actionbar_prayer" />

            <ImageView
                android:id="@+id/verse"
                android:layout_width="@dimen/actionbar_icon_size"
                android:layout_height="@dimen/actionbar_icon_size"
                android:layout_marginLeft="@dimen/actionbar_icon_margin_small"
                android:background="?attr/selectableItemBackground"
                android:scaleType="centerInside"
                android:src="@drawable/actionbar_verses" />

            <ImageView
                android:id="@+id/read"
                android:layout_width="@dimen/actionbar_icon_size"
                android:layout_height="@dimen/actionbar_icon_size"
                android:layout_marginLeft="@dimen/actionbar_icon_margin_small"
                android:background="?attr/selectableItemBackground"
                android:scaleType="centerInside"
                android:src="@drawable/actionbar_read" />

        </LinearLayout>


    </FrameLayout>


</RelativeLayout>