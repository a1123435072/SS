<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/about_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical">

    <!-- ToolBar -->

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        android:titleTextColor="@color/black" />

    <include layout="@layout/toolbar_shadow" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_32">


        <com.fw.basemodules.view.RobotoTextView
            android:id="@+id/id_terms_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="14dp"
            android:text="@string/terms_and_privacy"
            android:textColor="@color/black_999999"
            android:textSize="@dimen/tv_size_12" />

        <com.fw.basemodules.view.RobotoTextView
            android:id="@+id/feedback"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_above="@+id/id_terms_privacy"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/feedback_btn_bg"
            android:gravity="center"
            android:text="@string/feedback"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size_16" />

        <com.fw.basemodules.view.RobotoTextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/feedback"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="134dp"
            android:layout_marginTop="@dimen/margin_6"
            android:text="verson"
            android:textColor="@color/black_999999"
            android:textSize="@dimen/tv_size_14" />

        <ImageView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/version"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_6"
            android:src="@drawable/ic_logo"
            android:text="@string/app_name" />

        <ImageView
            android:id="@+id/about_us_icon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_above="@+id/name"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:src="@drawable/ic_about_launcher" />


    </RelativeLayout>
</LinearLayout>