<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/text_color_control_layout_id"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnWhiteColor"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/btn_color_white_bg" />

        <ImageButton
            android:id="@+id/btnBlackColor"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginLeft="@dimen/margin_30"
            android:layout_marginRight="@dimen/margin_30"
            android:background="@drawable/btn_color_black_bg" />

        <ImageButton
            android:id="@+id/btnMoreColor"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/ic_more_color" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d2d2d2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:text="@string/opacity"
            android:textColor="#000000"
            android:textSize="@dimen/tv_size_14" />

        <SeekBar
            android:id="@+id/sbTextOpacity"
            style="@style/Widget.AppCompat.SeekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:max="100"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:progressDrawable="@drawable/seekbar_progress_bg"
            android:thumb="@drawable/seekbar_thumb_bg" />

        <TextView
            android:id="@+id/text_opacity"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:text="100%"
            android:textColor="#000000"
            android:textSize="@dimen/tv_size_14" />

    </LinearLayout>


</LinearLayout>