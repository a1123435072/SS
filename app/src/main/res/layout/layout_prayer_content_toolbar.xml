<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roboto="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="36dp"
    android:background="@drawable/pray_detail_num_corner_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="14dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_prayer_detail_people" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/margin_4"
        android:orientation="vertical">

        <com.fw.basemodules.view.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:lines="1"
            android:maxLines="1"
            android:text="@string/praying"
            android:textColor="@color/white_translucent_70"
            android:textSize="@dimen/tv_size_10"
            roboto:typeface="@string/font_Light" />

        <com.fw.basemodules.view.RobotoTextView
            android:id="@+id/prayer_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/tv_size_10"
            roboto:typeface="@string/font_Light" />
    </LinearLayout>

</LinearLayout>