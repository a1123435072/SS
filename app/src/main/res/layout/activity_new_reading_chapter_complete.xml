<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/chapter_complete"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_40"
    android:paddingTop="@dimen/margin_40">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_18"
        android:layout_marginRight="@dimen/margin_18"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_reading_page_complete_segment" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20"
        android:gravity="center"
        android:text="@string/have_you_completed_this_chapter"
        android:textColor="@color/black_999999"
        android:textSize="@dimen/tv_size_14" />

    <TextView
        android:id="@+id/complete_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_40"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/margin_18"
        android:layout_marginRight="@dimen/margin_18"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@drawable/feedback_btn_bg"
        android:drawablePadding="@dimen/margin_6"
        android:gravity="center"
        android:minWidth="142dp"
        android:paddingLeft="@dimen/margin_16"
        android:paddingRight="@dimen/margin_16"
        android:text="@string/complete"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/tv_size_16" />
</LinearLayout>