<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roboto="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_welcome_bg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_12"
            android:layout_marginLeft="@dimen/margin_12"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/devotion_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_8"
                android:alpha="0.3"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_welcome_devotion" />

                <com.fw.basemodules.view.RobotoTextView
                    android:id="@+id/devotion_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_4"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tv_size_12"
                    roboto:typeface="@string/font_Regular" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pray_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_8"
                android:alpha="0.3"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_welcome_pray" />

                <com.fw.basemodules.view.RobotoTextView
                    android:id="@+id/pray_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_4"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tv_size_12"
                    roboto:typeface="@string/font_Regular" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/read_time_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.3"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_welcome_read" />

                <com.fw.basemodules.view.RobotoTextView
                    android:id="@+id/read_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_4"
                    android:textColor="@color/white"
                    android:textSize="@dimen/tv_size_12"
                    roboto:typeface="@string/font_Regular" />
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center">

        <ProgressBar
            android:layout_width="@dimen/margin_24"
            android:layout_height="@dimen/margin_24" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_8"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_logo" />
    </LinearLayout>
</LinearLayout>